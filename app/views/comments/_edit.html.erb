<%= form_for(@comment, url: topic_post_comment_path,remote: true, html: { id: "topic-create-form" }) do |f| %>
  <h1 class="text-center">
    Edit Comment
  </h1>

  <div class="form-group">
    <h4> <%= f.label :body_field, "Your Comment" %> </h4>
    <%= f.text_field :body, required: true, id: "comment_body_field", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.file_field :image, id: "comment_image_field", class: 'form-control image-uploader' %>
  </div>

  <div class="form-group">
      <h4 class="text-center"> Post Image </h4>
      <div id="preview-image">
        <% if @comment.image? %>
          <%= image_tag @comment.image, class: "img-settings img-responsive center-block" %>
        <% end %>
      </div>
  </div>

  <div class="form-group text-center">
    <%= f.submit "Create Comment", class: "btn btn-success btn-lg" %>
  </div>
<% end %>
