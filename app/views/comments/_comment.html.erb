<div class="topic-child" id="comment<%=comment.id%>">
          <h1><%= comment.body %></h1>
          <%= image_tag comment.image %>
          <div class="control-panel">
            <% if comment.user == current_user || current_user&.admin? || current_user&.moderator? %>
          <%= link_to "Edit Comment", edit_topic_post_comment_path(post.topic, comment.post, comment), remote: true %>
          <%= link_to "Delete", topic_post_comment_path(post.topic, comment.post, comment), method: :delete, remote: true, data: { confirm: "Delete?" } %>
          <%= link_to "Like", upvote_path(comment_id: comment.id), method: :post, remote: true %>
          <%= link_to "Unike", downvote_path(comment_id: comment.id), method: :post, remote: true %>
          <% end %>
        </div>
    </div>
