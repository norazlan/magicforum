<%= form_tag sessions_path  do %>
<div class="form-group">
  <h4>Email:</h4>
  <%= text_field_tag :email, class: 'form-control' %>
</div>
<div class="form-group">
  <h4>Password:</h4>
  <%= text_field_tag :password, class: 'form-control' %>
</div>
<%= submit_tag "Login", class: "btn btn-success btn-lg" %>
<% end %>
